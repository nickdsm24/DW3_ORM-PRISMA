// Nas versões acima da 7 do Prisma, não é mais necessário deixar a variável da URL aqui, isso agora é dentro do prisma.config

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

// url = env("DATABASE_URL") // Não precisa mais disso, ele dá erro nas novas versões
}

// Cria a tabela do BD
model Task {
  id Int @id @default(autoincrement())
  title String
  description String?
  done Boolean @default(false)
  createAt DateTime @default(now())
}
